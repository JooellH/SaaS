# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/reserva_pro"

# JWT Secrets
# Generate strong random strings for production
JWT_ACCESS_SECRET="change-me-access-secret-min-32-chars"
JWT_REFRESH_SECRET="change-me-refresh-secret-min-32-chars"

# WhatsApp Integration
# Token for WhatsApp Business API
WHATSAPP_TOKEN="your_whatsapp_token_here"
WHATSAPP_API_URL="https://graph.facebook.com/v17.0"

# Stripe Billing (Pro: USD 14.99 / mes, por negocio)
# 1) Creá tu cuenta en Stripe
# 2) Creá un Product + Price (recurring monthly) por USD 14.99
# 3) Pegá el Price ID en STRIPE_PRO_PRICE_ID
# 4) Configurá el webhook apuntando a: {BACKEND_URL}/api/billing/webhook
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRO_PRICE_ID="price_..."

# URLs
# Backend base URL (used for callbacks and links)
BASE_URL_BACKEND="https://your-backend.up.railway.app"

# Frontend URL (for CORS configuration)
# Can be comma-separated for multiple origins
FRONTEND_URL="http://localhost:4200,https://your-frontend.vercel.app"

# Optional: URL pública para redirects de Stripe (si no querés usar el primer FRONTEND_URL)
# PUBLIC_FRONTEND_URL="https://your-frontend.vercel.app"

# Server Configuration
PORT=3000

# Node Environment
NODE_ENV="development"

# Optional: Redis for caching (future implementation)
# REDIS_URL="redis://localhost:6379"

